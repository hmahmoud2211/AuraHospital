{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "strict": true,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "./*"
        ]
      },
      "jsx": "react-native",
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      ".expo/types/**/*.ts",
      "expo-env.d.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  